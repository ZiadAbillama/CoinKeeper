# Sample .env file for Jenkins pipeline
# Copy to .env and update with your values

# Docker Registry Configuration
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password
DOCKER_NAMESPACE=your-namespace

# GitHub Configuration
GITHUB_TOKEN=your-github-token
GITHUB_REPO=https://github.com/ZiadAbillama/CoinKeeper

# Kubernetes Configuration
KUBECONFIG_PATH=/path/to/kubeconfig
KUBERNETES_NAMESPACE=coinkeeper
KUBERNETES_CLUSTER=your-cluster-name

# Environment Configuration
ENVIRONMENT=dev
NODE_ENV=development

# Service Ports
AUTH_SERVICE_PORT=5000
EXPENSES_SERVICE_PORT=5001
BUDGETS_SERVICE_PORT=5002
ANALYTICS_SERVICE_PORT=5003
FRONTEND_PORT=3000

# Database Configuration (if needed)
MONGODB_URI=mongodb://mongo:27017/coinkeeper
DB_HOST=postgres
DB_PORT=5432
DB_NAME=coinkeeper
DB_USER=coinkeeper_user
DB_PASSWORD=your-password

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://auth-service:5000
EXPENSES_SERVICE_URL=http://expenses-service:5001
BUDGETS_SERVICE_URL=http://budgets-service:5002
ANALYTICS_SERVICE_URL=http://analytics-service:5003
API_GATEWAY_URL=http://api-gateway:3000

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY=24h

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Build Configuration
BUILD_NUMBER=${BUILD_NUMBER}
BUILD_TAG=${BUILD_TAG}
GIT_COMMIT=${GIT_COMMIT}
GIT_BRANCH=${GIT_BRANCH}

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#ci-cd
EMAIL_RECIPIENTS=your-email@example.com

# Jenkins Configuration
JENKINS_URL=http://localhost:8080/jenkins
JENKINS_ADMIN_TOKEN=your-jenkins-token
